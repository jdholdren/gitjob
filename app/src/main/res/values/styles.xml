<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- For when we don't need a toolbar -->
    <style name="AppThemeNoToolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ItemJobCompany">
        <item name="android:textColor">@color/black_30</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ItemJobTitle">
        <item name="android:textColor">@color/black_87</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="DetailTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ApplyNow" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:text">@string/apply_now</item>
        <item name="android:background">@drawable/pill_background</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>
</resources>
